<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>cookiedemo1</servlet-name>
        <servlet-class>com.yaozhou.cookie.CookieDemo1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cookiedemo1</servlet-name>
        <url-pattern>/c1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cookiedemo3</servlet-name>
        <servlet-class>com.yaozhou.cookie.CookieDemo3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cookiedemo3</servlet-name>
        <url-pattern>/c3</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>sessionDemo1</servlet-name>
        <servlet-class>com.yaozhou.session.SessionDemo1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionDemo1</servlet-name>
        <url-pattern>/s1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sessionDemo2</servlet-name>
        <servlet-class>com.yaozhou.session.SessionDemo2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionDemo2</servlet-name>
        <url-pattern>/s2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sessionDemo3</servlet-name>
        <servlet-class>com.yaozhou.session.SessionDemo3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionDemo3</servlet-name>
        <url-pattern>/s3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sessionDemo4</servlet-name>
        <servlet-class>com.yaozhou.session.SessionDemo4</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sessionDemo4</servlet-name>
        <url-pattern>/s4</url-pattern>
    </servlet-mapping>

    <!--设置session的默认失效时间-->
    <session-config>
        <!--session失效时间以分钟为单位-->
        <session-timeout>1</session-timeout>
    </session-config>
</web-app>